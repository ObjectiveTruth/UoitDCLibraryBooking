<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_landing_scrollview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/rounded_white_square" >

    <LinearLayout
        android:id="@+id/rooms_landing_table_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"

        android:gravity="center_horizontal" 
        android:orientation="vertical"

        >

        <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
            
            android:id="@+id/room_landing_top_title"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="ROM 999"
            android:textColor="@color/blue_font"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/dialog_title_text" />

        <ImageView
            android:id="@+id/room_landing_room_picture"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="Picture of the room"
            android:scaleType="centerCrop"
            android:src="@drawable/unknown_room" />

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content" >

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_floor_word"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Floor:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_floor_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue_font"
                android:gravity="center"
                android:layout_height="wrap_content"

                android:text="#"

                android:textAppearance="?android:attr/textAppearanceMedium" />
            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_seating_cap_word"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Seating:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_seating_capacity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue_font"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="#"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>


        <LinearLayout

            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_min_bookers_word"
                android:layout_width="0dp"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Needs:"

                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_min_bookers"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue_font"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="#"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_max_bookable_word"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Max:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
                android:id="@+id/room_landing_max_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/blue_font"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="# Hours"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>


        <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
            android:id="@+id/room_landing_comments_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="Features: "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <com.objectivetruth.uoitlibrarybooking.userinterface.common.RobotoTextView
            android:id="@+id/room_landing_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:minLines ="3"
            android:text="comments"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue_font"
             />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content" >

            <com.cengalabs.flatui.views.FlatButton
                style="@style/flat_ui_button"
                android:id="@+id/negative_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Back"
                />
            <!--            <Button
                            android:id="@+id/negative_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            style="@style/customButton"
                            android:text="Back" />-->

            <!--            <Button
                            android:id="@+id/positive_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            style="@style/customButton"
                            android:text="OK" />-->

            <com.cengalabs.flatui.views.FlatButton
                style="@style/flat_ui_button"
                android:id="@+id/positive_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"


                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="OK"
                />
        </LinearLayout>

    </LinearLayout>


</ScrollView>