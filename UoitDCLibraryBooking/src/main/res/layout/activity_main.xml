<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/drawer_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.objectivetruth.uoitlibrarybooking.NonSwipeableViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/admob_frame"
            android:background="@null"
            tools:context="com.objectivetruth.uoitlibrarybooking.MainActivity" />

        <RelativeLayout
			android:id="@+id/admob_frame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            >
        
        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:layout_gravity="start"
        android:background="#444444"
        android:choiceMode="singleChoice"
        android:divider="#444444"
         />



</android.support.v4.widget.DrawerLayout>
