<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_square"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <com.cengalabs.flatui.views.FlatEditText
            style="@style/flat_edittext"
            android:id="@+id/diafrag_comments_actual"
            android:layout_width="200dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView1"
            android:gravity="start"
            android:minLines="3"
            android:hint="This is the best group in the world!"
            android:textColorHint="@color/dark_light"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^&amp;*()"
            android:maxLength="70" />

        <com.objectivetruth.uoitlibrarybooking.RobotoTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@id/diafrag_comments_actual"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_font"
            android:text="Comments:"
            android:textSize="@dimen/dialog_title_text"
            />
        <com.cengalabs.flatui.views.FlatButton
            style="@style/flat_ui_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/comments_ok_button"
            android:layout_below="@+id/diafrag_comments_actual"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@android:string/ok"
            />
    </RelativeLayout>
</ScrollView>